<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ServiceActivity">

    <Button
        android:id="@+id/buttonLifeTimeService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startLifeTimeService"
        android:text="Start Lifetime service"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/frequency_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/low_freq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low frequency > (Accelerometer record 5/sec)"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="25dp" />

        <RadioButton
            android:id="@+id/mid_freq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mid frequency >> (Accelerometer record 15/sec)"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="25dp" />

        <RadioButton
            android:id="@+id/high_freq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High frequency >>> (Accelerometer record 50/sec)"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="25dp" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>